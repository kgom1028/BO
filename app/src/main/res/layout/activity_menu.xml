                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:orientation="horizontal"
                      android:clickable="true"
                      android:padding="5dp"
                      android:gravity="center_vertical"
                      android:onClick="onClick"
                      android:id="@+id/monthlybonus"
                      >
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:adjustViewBounds="true"
                          android:src="@drawable/menu2"/>


                  </LinearLayout>-->
   <!--               <LinearLayout
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="0dp"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:orientation="horizontal"
                      android:clickable="true"
                      android:padding="5dp"
                      android:gravity="center_vertical"
                      android:onClick="onClick"
                      android:id="@+id/weekly_profit"
                      >
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:adjustViewBounds="true"
                          android:src="@drawable/weekly_profit"/>


                  </LinearLayout>-->
                  <LinearLayout
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="0dp"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:orientation="horizontal"
                      android:clickable="true"
                      android:padding="5dp"
                      android:gravity="center_vertical"
                      android:onClick="onClick"
                      android:id="@+id/trader_of_week"
                      >
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:adjustViewBounds="true"
                          android:src="@drawable/trade_of_week"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:orientation="horizontal"
                      android:clickable="true"
                      android:padding="5dp"
                      android:gravity="center_vertical"
                      android:onClick="onClick"
                      android:id="@+id/tips"
                      >
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:adjustViewBounds="true"
                          android:src="@drawable/profit_hacks"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:layout_marginTop="5dp"
                      android:orientation="horizontal"
                      android:clickable="true"
                      android:padding="5dp"
                      android:gravity="center_vertical"
                      android:onClick="onClick"
                      android:id="@+id/buy_or_sell"
                      >
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:adjustViewBounds="true"
                          android:src="@drawable/buy_or_sell"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:layout_marginTop="5dp"
                      android:orientation="horizontal"
                      android:clickable="true"
                      android:padding="5dp"
                      android:gravity="center_vertical"
                      android:onClick="onClick"
                      android:id="@+id/tradingAlerts"
                      >
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:adjustViewBounds="true"
                          android:src="@drawable/daily_news"/>
                  </LinearLayout>
  <!--                <LinearLayout
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="43dp"
                      android:layout_marginRight="30dp"
                      android:layout_marginTop="5dp"
                      android:orientation="horizontal"
                      android:clickable="true"
                      android:padding="5dp"
                      android:gravity="center_vertical"
                      android:onClick="onClick"
                      android:id="@+id/daily_news"
                      >
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:adjustViewBounds="true"
                          android:src="@drawable/daily_news"/>
                  </LinearLayout>-->

                  <LinearLayout
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:orientation="horizontal"
                      android:clickable="true"
                      android:padding="5dp"
                      android:gravity="center_vertical"
                      android:onClick="onClick"
                      android:id="@+id/tutorial"
                      >
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:adjustViewBounds="true"
                          android:src="@drawable/menu4"/>
                  </LinearLayout>


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:weightSum="10">
                      <View
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="2"
                          ></View>
                      <ImageView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:adjustViewBounds="true"
                          android:src="@drawable/mac_desktop_img"
                          android:layout_gravity="center_horizontal"
                          android:layout_weight="6"
                          android:onClick="onClick"
                          android:id="@+id/mac_desktop"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:orientation="horizontal"
                      android:clickable="true"
                      android:padding="5dp"
                      android:gravity="center_vertical"
                      android:onClick="onClick"
                      android:id="@+id/warning"
                      >
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:adjustViewBounds="true"
                          android:src="@drawable/warning"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:orientation="horizontal"
                      android:clickable="true"
                      android:padding="5dp"
                      android:gravity="center_vertical"
                      android:onClick="onClick"
                      android:id="@+id/privacy_policy"
                      >
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:adjustViewBounds="true"
                          android:src="@drawable/privacy_policy"/>
                  </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>